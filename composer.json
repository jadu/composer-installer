{
    "name": "jadu/composer-installer",
    "type": "composer-plugin",
    "description": "Handles the installation of modules, widgets, etc for Jadu CMS implementations",
    "authors": [
        {
            "name": "Matt Dolan",
            "email": "matt.dolan@jadu.co.uk"
        }
    ],
    "license": "proprietary",
    "repositories": [
        {"type": "composer", "url": "http://toran-proxy.hq.jadu.net/repo/private/"}
    ],
    "require": {
        "composer-plugin-api": "^1.0",
        "jadu/meteor": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "psr-4": {"Jadu\\Composer\\": "src/"}
    },
    "extra": {
        "class": "Jadu\\Composer\\Plugin"
    }
}
